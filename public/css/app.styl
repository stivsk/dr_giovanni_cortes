@import 'nib'
@import url(http://fonts.googleapis.com/css?family=Roboto:300,400)
vendor-prefixes ?= webkit moz official

azul = #00AAFF
gris = #515151
gris-claro = #EEEEEE

*
	border 0
	margin 0
	padding 0
	::-webkit-scrollbar
		background-color transparent
		height 6px
		width 6px
		&-track
			background-color transparent
		&-thumb
			background-color azul 
		

body
	font-family 'Roboto', sans-serif
	font-weight 300
	line-height 2em
	border-bottom .2em solid azul
nav
	text-align center
	ul
		li
			display inline-flex
			margin 2em 10px
			position relative
			a
				animation 1s bounceIn 1
				background azul
				border-radius 100%
				box-shadow 0px 0px 2px gris, 0px 2px 4px gris
				color white
				height 4em
				padding 2em
				text-decoration none
				width 4em
				transition all cubic-bezier(0.08, 0.45, 0.24, 0.97) 1s 
				&:focus,
				&:active,
				&:hover
					border none
					box-shadow 0px 0px 4px gris, 0px 6px 6px gris
			i
				display block
				font-size 3em
				line-height 1.4 !important
				text-align center
			p
				bottom -40px
				color gris
				left 4px
				position absolute
				width 100%
footer
	padding 4em 2em
	text-align center
.modal_container
	text-align center
	ul li
		display inline-flex
		margin .2em
		a
			background gris-claro
			border-radius 2px
			color gris
			padding 2em
			text-align center
			text-decoration none
			p
				transition all cubic-bezier(0.08, 0.45, 0.24, 0.97) 1s 
				text-overflow ellipsis
				text-transform uppercase
				overflow hidden
				white-space nowrap
				width 162px
			&:hover
				background gris
				color gris-claro
ol
	margin-left 30px !important
	
h2
		color azul
		font-size 18px
		font-weight 100
		letter-spacing 5px
		margin-top 1em
		padding-bottom 1em
		text-align center
		text-transform uppercase
		
.responsive-container {
    position: relative;
    padding-bottom: 56.25%;
    padding-top: 30px; height: 0; overflow: hidden;
}
 
.responsive-container iframe,
.responsive-container object,
.responsive-container embed,
.responsive-container img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}
	
#cover
	background white
	bottom 0
	left 0
	position fixed
	right 0
	top 0
	z-index 9999999
#presentation
	background white
	color gris
	height 250px
	padding-top 1em
	text-align center
.pre-text
	letter-spacing .5em
	padding 10px
	text-align center
	h1
		animation 1.5s fadeIn 1
	p 
		animation 2s fadeIn 1

.back
	color azul
	letter-spacing 2px
	position relative
	text-decoration none
	text-transform uppercase
	top 20px
.center
	left 0
	margin 0 auto
	right 0
	text-align center
.container
	margin 0 auto
	max-width 600px
	position relative
.first
	background white
	box-shadow 0px 1px 10px gris
	color gris
	padding 2em
	position relative
	z-index 999
.flex
	align-items center
	display flex
	flex-flow row wrap
	justify-content center
.preloader
	background url(../img/preloader.gif) no-repeat center center
	background-size contain
	height 50px
	margin 0 auto
	width 50px
.pre-pic
	animation 1.5s fadeIn 1
	background url(../img/1.png) no-repeat center center
	background-size cover
	border-radius 50%
	height 150px
	margin 0 auto
	margin-bottom 1em
	width 150px	
.slider-for
	width 100%
.slick-slider
	margin 7px 0px
.slick-initialized .slick-slide
	box-shadow 0px 1px 8px gris	
.slick-prev
	position absolute
	left 0px
.slick-next
	position absolute
	right 50px
.title
	font-weight normal
	letter-spacing .5em
	padding 1em
	text-transform uppercase
	text-align center
.img-responsive
	width 100%

@media all and (min-width:910px)
	body
		padding-top 82px
		border none
	footer
		bottom 0
		left 0
		padding 1em
		position fixed
		right 0
	nav
		ul
			flex-wrap wrap !important
			max-width 120% !important
			padding 0em 2em 0 2em	
			width 120%
	.container
		align-items center
		align-content flex-start
		display flex
		flex-direction row
		flex-wrap nowrap
		justify-content space-between
		max-width 90%
		min-height 420px
		white-space nowrap
		.flex-item
			order 0
			flex 0 1 auto
			align-self auto
		h2
			text-align left !important
	.slider-for
		box-shadow 0px 1px 8px gris	
		width 508px
		height 508px
		max-width 508px
		min-width 508px
		min-height 508px
		max-height 508px
	.slick-slider
		border-radius 2	px
		margin 0
		overflow hidden
	.first
		background none
		box-shadow none
		color gris
		left 0
		right 0
		padding 1.5em 3.5em
		position fixed
		top 0
		.thumb
			display none
		.title,
		.pre-text
			display inline-flex
			padding 0 .5em 0 .5em